{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "reporter": ["cobertura", "text", "text-summary", "html", "lcov", "json"],
  "reporterOptions": { "mochaFile": "coverage/junit-report.xml" },
  "temp-dir": "tests/coverage/.nyc_output",
  "clear": true,
  "include": [
    "app/Controllers/**/*.*",
    "app/Exceptions/**/*.*",
    "app/Middleware/**/*.*",
    "app/Routes/**/*.*",
    "app/Services/**/*.*",
    "app/Validators/**/*.*",
    "start/routes.ts"
  ]
}
